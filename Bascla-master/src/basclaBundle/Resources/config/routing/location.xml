<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="location_index" path="/" methods="GET">
        <default key="_controller">basclaBundle:Location:index</default>
    </route>

    <route id="location_show" path="/{id}/show" methods="GET">
        <default key="_controller">basclaBundle:Location:show</default>
    </route>

    <route id="location_new" path="/new" methods="GET|POST">
        <default key="_controller">basclaBundle:Location:new</default>
    </route>

    <route id="location_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">basclaBundle:Location:edit</default>
    </route>

    <route id="location_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">basclaBundle:Location:delete</default>
    </route>

</routes>
